<%= turbo_frame_tag "follow-button" do %>
    <% if user.followers.include?(current_user) %>
        <%= link_to "Unfollow", user_follow_path(user, current_user.follows.find_by(following_user_id: user)), data: { "turbo-method": :delete }, class: "btn btn--light" %>
    <% else %>
        <%= link_to "Follow", user_follows_path(current_user, following_user_id: user),  data: { "turbo-method": :post }, class: "btn btn--light" %>
    <% end %>
<% end %>