<div id="profile-tweets">
    <div class="profile-nav">
        <div class="<%= "profile-nav-action #{@posts_active}" %>">
            <%= link_to "Posts", user_path(id: user.id), data: { "turbo-stream": true }, remote: true %>
        </div>
        <div class="<%= "profile-nav-action #{@replies_active}" %>">
            <%= link_to "Replies", users_replies_path(id: user.id), data: { "turbo-stream": true } %>         
        </div>
        <div class="<%= "profile-nav-action #{@likes_active}" %>">
            <%= link_to "Likes", users_likes_path(id: user.id), data: { "turbo-stream": true } %>
        </div>
    </div>
    <div id="tweets">
        <%= render partial: "tweets/tweet", collection: @tweets, as: :tweet_presenter %>
    </div>
</div>

